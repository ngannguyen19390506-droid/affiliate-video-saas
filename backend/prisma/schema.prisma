generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  TEST
  CONTINUE
  STOP
  REVISIT
}

model Product {
  id          String        @id @default(uuid())
  workspaceId String
  status      ProductStatus @default(TEST)
  createdAt   DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  videos    Video[]

  // üîΩ TH√äM D√íNG N√ÄY
  dailyActions DailyAction[]

  @@index([workspaceId])
}

model Video {
  id        String @id @default(uuid())
  productId String

  // Ph√¢n lo·∫°i video ƒë·ªÉ ph·ª•c v·ª• rule & fatigue
  type   VideoType // SELL | BUILD
  format String    // POV / BEFORE_AFTER / REVIEW...

  // Analytics (nh·∫≠p tay giai ƒëo·∫°n 1)
  views  Int @default(0)
  clicks Int @default(0)

  // Tr·∫°ng th√°i render
  renderStatus RenderStatus @default(PENDING)
  outputPath   String?

  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
  @@index([format])
}


model Workspace {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  products Product[]
}

model RuleConfig {
  id          String @id @default(uuid())
  workspaceId String
  key         String
  value       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workspaceId, key])
  @@index([workspaceId])
}

model DailyAction {
  id          String @id @default(uuid())
  workspaceId String

  productId String
  product   Product @relation(fields: [productId], references: [id])

  actionType DailyActionType
  priority   Int
  reason     String
  metadata   Json?

  // Ng√†y action c√≥ hi·ªáu l·ª±c (theo ng√†y, kh√¥ng theo gi·ªù)
  actionDate DateTime @db.Timestamptz

  // Tr·∫°ng th√°i th·ª±c hi·ªán
  isDone    Boolean   @default(false)
  doneAt    DateTime?
  createdAt DateTime  @default(now())

  // ‚õî Ch·ªëng t·∫°o action tr√πng trong c√πng 1 ng√†y
  @@unique([workspaceId, productId, actionType, actionDate])
  @@index([workspaceId, actionDate])
}


enum DailyActionType {
  MAKE_MORE_VIDEOS
  SCALE_FORMAT
  STOP_PRODUCT
  RETEST_WITH_NEW_FORMAT
}

model DailyActionRun {
  id           String @id @default(uuid())
  workspace_id String
  run_date     String // YYYY-MM-DD

  status        String // RUNNING | DONE | FAILED
  started_at    DateTime
  finished_at   DateTime?
  error_message String?

  @@unique([workspace_id, run_date])
}

enum VideoType {
  SELL
  BUILD
}

enum RenderStatus {
  PENDING     // s·∫µn s√†ng render / ch·ªù worker
  RENDERING   // ƒëang ch·∫°y
  DONE        // render xong
  FAILED      // l·ªói
}


model VideoProject {
  id String @id @default(cuid())

  workspaceId String
  priority    Int @default(0)

  productId String

  // ===== CONTEXT =====
  platform VideoPlatform
  type     VideoType
  template String
  formatId String?

  // ===== INPUT =====
  inputMedia Json
  visionData Json?

  // ===== AI OUTPUT =====
  userPrompt  String?
  scriptData  Json?
  voiceScript Json?
  caption     String?

  // ===== RENDER =====
  status       VideoProjectStatus @default(DRAFT)
  renderStatus RenderStatus       @default(PENDING)

  // ‚úÖ NEW
  renderStep     RenderStep?
  renderProgress Int              @default(0)
  renderLogs     Json?

  voicePath    String?
  outputVideo  String?
  errorMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum RenderStep {
  ANALYZING
  SCRIPTING
  TTS
  RENDERING
  DONE
  ERROR
}


enum VideoProjectStatus {
  DRAFT        // m·ªõi t·∫°o, ƒëang ch·ªânh prompt
  GENERATED    // ƒë√£ c√≥ script / caption / voice script
  ARCHIVED     // video c≈©, kh√¥ng d√πng n·ªØa
}


enum VideoPlatform {
  TIKTOK
  FACEBOOK
}

model PostSchedule {
  id          String  @id @default(uuid())
  workspaceId String
  videoId     String
  productId   String?

  platform    String
  scheduledAt DateTime @db.Timestamptz
  timezone    String

  status     String
  retryCount Int    @default(0)
  maxRetry   Int    @default(3)

  resultMessage String?
  createdAt     DateTime @default(now()) @db.Timestamptz
  updatedAt     DateTime @updatedAt @db.Timestamptz
}

model FacebookPage {
  id              String   @id @default(cuid())
  workspaceId     String
  pageId          String
  pageName        String
  pageAccessToken String
  createdAt       DateTime @default(now())
}
